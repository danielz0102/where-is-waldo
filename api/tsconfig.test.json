{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"module": "es2022",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": true,
		"lib": ["es2022"],
		"paths": {
			"~controllers/*": ["src/controllers/*"],
			"~models/*": ["src/models/*"],
			"~routers/*": ["src/routers/*"],
			"~/*": ["src/*"],
			"~tests/*": ["tests/*"]
		}
	},
	"include": ["tests/**/*"]
}
