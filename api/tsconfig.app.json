{
	"compilerOptions": {
		"target": "es2022",
		"module": "nodenext",
		"outDir": "./dist",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~controllers/*": ["src/controllers/*"],
			"~models/*": ["src/models/*"],
			"~routers/*": ["src/routers/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
