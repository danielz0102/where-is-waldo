{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~config": ["config.ts"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
