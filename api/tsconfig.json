{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~config": ["config.ts"],
			"~controllers/*": ["src/controllers/*"],
			"~models/*": ["src/models/*"],
			"~routers/*": ["src/routers/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*.test.ts"],
	"exclude": ["node_modules"]
}
