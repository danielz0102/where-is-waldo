{
	"compilerOptions": {
		"types": ["vitest/globals", "@testing-library/jest-dom"],
		"jsx": "react-jsx",
		"lib": ["ES2023", "DOM"],
		"strict": true,

		"baseUrl": ".",
		"paths": {
			"~ui/*": ["src/components/ui/*"],
			"~components/*": ["src/components/*"],
			"~assets/*": ["src/assets/*"],
			"~services/*": ["src/services/*"],
			"~hooks/*": ["src/hooks/*"],
			"~pages/*": ["src/pages/*"],
			"~tests/*": ["tests/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["**/*.test.*", "**/*.spec.*"],
	"exclude": ["tests/e2e"]
}
