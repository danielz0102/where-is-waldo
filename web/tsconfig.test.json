{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"baseUrl": ".",
		"paths": {
			"~ui/*": ["src/components/ui/*"],
			"~components/*": ["src/components/*"],
			"~assets/*": ["src/assets/*"],
			"~services/*": ["src/services/*"],
			"~hooks/*": ["src/hooks/*"],
			"~pages/*": ["src/pages/*"],
			"~tests/*": ["tests/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["tests/**/*"]
}
