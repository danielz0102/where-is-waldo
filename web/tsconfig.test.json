{
	"compilerOptions": {
		"types": ["vitest/globals", "@testing-library/jest-dom"],
		"baseUrl": ".",

		"jsx": "react-jsx",

		"paths": {
			"~ui/*": ["src/components/ui/*"],
			"~components/*": ["src/components/*"],
			"~assets/*": ["src/assets/*"],
			"~services/*": ["src/services/*"],
			"~hooks/*": ["src/hooks/*"],
			"~pages/*": ["src/pages/*"],
			"~tests/*": ["tests/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["**/*.test.*", "**/*.spec.*"]
}
