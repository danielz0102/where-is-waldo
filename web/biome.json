{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"extends": "//",
	"linter": {
		"domains": {
			"react": "recommended"
		},
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "info",
					"options": { "attributes": ["className"] }
				}
			}
		}
	},
	"javascript": {
		"globals": [
			"describe",
			"it",
			"test",
			"expect",
			"beforeEach",
			"afterEach",
			"vi"
		]
	}
}
