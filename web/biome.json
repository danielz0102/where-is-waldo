{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"extends": "//",
	"files": {
		"includes": ["src/**"]
	},
	"linter": {
		"domains": {
			"react": "recommended"
		},
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "info",
					"options": { "attributes": ["className"] }
				}
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	}
}
